<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected dot (green and larger) -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/japanese_laurel"/>
            <size android:width="12dp" android:height="12dp"/> <!-- Larger size for selected dot -->
        </shape>
    </item>
    <!-- Unselected dot (white and smaller) -->
    <item android:state_selected="false">
        <shape android:shape="oval">
            <solid android:color="@color/lite_white"/>
            <size android:width="8dp" android:height="8dp"/> <!-- Smaller size for unselected dot -->
        </shape>
    </item>
</selector>
