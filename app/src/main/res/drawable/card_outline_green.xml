<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/white">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/lite_white" />
            <corners android:radius="@dimen/cardview_default_radius" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/japanese_laurel_lite"/>
            <corners android:radius="@dimen/cardview_default_radius" />
            <stroke
                android:width="@dimen/card_stroke_width"
                android:color="@color/japanese_laurel" />
        </shape>
    </item>
</ripple>